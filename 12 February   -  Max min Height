class Solution {
    public int maxMinHeight(int[] arr, int k, int w) {
        int n = arr.length;
        
        int low = Integer.MAX_VALUE;
        for (int h : arr) {
            low = Math.min(low, h);
        }
        
        int high = low + k;
        int ans = low;
        
        while (low <= high) {
            int mid = low + (high - low) / 2;
            
            if (canMake(arr, n, k, w, mid)) {
                ans = mid;
                low = mid + 1;   // try bigger minimum
            } else {
                high = mid - 1;  // try smaller
            }
        }
        
        return ans;
    }
    
    private boolean canMake(int[] arr, int n, int k, int w, int target) {
        long operations = 0;
        long[] diff = new long[n + 1];  // difference array
        long currentWater = 0;
        
        for (int i = 0; i < n; i++) {
            currentWater += diff[i];
            
            long currentHeight = arr[i] + currentWater;
            
            if (currentHeight < target) {
                long need = target - currentHeight;
                operations += need;
                
                if (operations > k) return false;
                
                currentWater += need;
                
                if (i + w < diff.length)
                    diff[i + w] -= need;
            }
        }
        
        return true;
    }
}
