import java.util.Arrays;

class Solution {
    public int hIndex(int[] citations) {
        // Sort the array in ascending order
        Arrays.sort(citations);
        
        int n = citations.length;
        
        // Traverse the array
        for (int i = 0; i < n; i++) {
            int h = n - i;  // Number of papers with citations >= citations[i]
            
            if (citations[i] >= h) {
                return h;
            }
        }
        
        return 0;
    }
}
