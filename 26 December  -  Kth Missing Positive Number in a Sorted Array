class Solution {
    public int kthMissing(int[] arr, int k) {
        int n = arr.length;
        
        // If kth missing number is before the first element
        if (arr[0] > k) {
            return k;
        }
        
        int low = 0, high = n - 1;
        
        while (low <= high) {
            int mid = low + (high - low) / 2;
            int missing = arr[mid] - (mid + 1);
            
            if (missing < k) {
                low = mid + 1;
            } else {
                high = mid - 1;
            }
        }
        
        // kth missing number
        return low + k;
    }
}
