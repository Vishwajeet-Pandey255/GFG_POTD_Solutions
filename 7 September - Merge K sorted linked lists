class Node {
    int data;
    Node next;

    Node(int x) {
        data = x;
        next = null;
    }
}
*/

import java.util.*;

class Solution {
    Node mergeKLists(Node[] arr) {
        // Min-heap to store nodes based on data
        PriorityQueue<Node> pq = new PriorityQueue<>(new Comparator<Node>() {
            public int compare(Node a, Node b) {
                return a.data - b.data;
            }
        });

        // Add the head of each list to the heap
        for (Node head : arr) {
            if (head != null) {
                pq.add(head);
            }
        }

        // Dummy node to build the result list
        Node dummy = new Node(0);
        Node tail = dummy;

        // Extract the smallest node and push its next into heap
        while (!pq.isEmpty()) {
            Node curr = pq.poll();
            tail.next = curr;
            tail = tail.next;

            if (curr.next != null) {
                pq.add(curr.next);
            }
        }

        return dummy.next;
    }
}
