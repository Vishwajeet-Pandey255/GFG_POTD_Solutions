// User function Template for Java

class Solution {
    public int nCr(int n, int r) {
        // If r > n, binomial coefficient is zero
        if (r > n) return 0;
        
        // Use symmetry: C(n, r) == C(n, n-r)
        int k = Math.min(r, n - r);
        
        long res = 1;
        // Compute product: res = âˆ_{i=1}^k (n - k + i) / i
        for (int i = 1; i <= k; i++) {
            res = res * (n - k + i) / i;
        }
        
        return (int) res;
    }
}
