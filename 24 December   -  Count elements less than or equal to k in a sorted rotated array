class Solution {
    
    public int countLessEqual(int[] arr, int x) {
        int n = arr.length;
        
        // Step 1: Find pivot (index of minimum element)
        int pivot = findPivot(arr, n);
        
        // Step 2: Count elements <= x in both sorted halves
        int count = 0;
        count += countInSorted(arr, 0, pivot - 1, x);
        count += countInSorted(arr, pivot, n - 1, x);
        
        return count;
    }
    
    // Binary search to find pivot
    private int findPivot(int[] arr, int n) {
        int low = 0, high = n - 1;
        
        while (low < high) {
            int mid = low + (high - low) / 2;
            
            if (arr[mid] > arr[high]) {
                low = mid + 1;
            } else {
                high = mid;
            }
        }
        return low;
    }
    
    // Count elements <= x in a sorted array using binary search
    private int countInSorted(int[] arr, int left, int right, int x) {
        if (left > right) return 0;
        
        int low = left, high = right;
        
        while (low <= high) {
            int mid = low + (high - low) / 2;
            
            if (arr[mid] <= x) {
                low = mid + 1;
            } else {
                high = mid - 1;
            }
        }
        return low - left;
    }
}
