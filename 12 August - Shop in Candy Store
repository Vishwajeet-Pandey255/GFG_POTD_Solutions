import java.util.*;

class Solution {
    public ArrayList<Integer> minMaxCandy(int[] prices, int k) {
        ArrayList<Integer> result = new ArrayList<>();
        
        Arrays.sort(prices); // Sort in ascending order
        
        int n = prices.length;
        
        int minCost = 0;
        int start = 0, end = n - 1;
        while (start <= end) {
            minCost += prices[start];
            start++;
            end -= k; // take k most expensive for free
        }
        
        int maxCost = 0;
        start = 0;
        end = n - 1;
        while (start <= end) {
            maxCost += prices[end];
            end--;
            start += k; // take k cheapest for free
        }
        
        result.add(minCost);
        result.add(maxCost);
        return result;
    }
}
