import java.util.*;

class Solution {

    public boolean isPossible(int[] arr, int k) {
        if (k == 1) return true;  // Every single number can form a sequence

        // Count frequency of each number
        Map<Integer, Integer> freq = new HashMap<>();
        // Count how many subsequences end with a particular number
        Map<Integer, Integer> end = new HashMap<>();

        for (int num : arr) {
            freq.put(num, freq.getOrDefault(num, 0) + 1);
        }

        for (int num : arr) {
            if (freq.get(num) == 0) continue; // Already used

            // Use one occurrence of num
            freq.put(num, freq.get(num) - 1);

            // If there's a subsequence ending at num-1, extend it
            if (end.getOrDefault(num - 1, 0) > 0) {
                end.put(num - 1, end.get(num - 1) - 1);
                end.put(num, end.getOrDefault(num, 0) + 1);
            }
            // Else try to start a new sequence of length k
            else {
                boolean canForm = true;
                for (int i = 1; i < k; i++) {
                    if (freq.getOrDefault(num + i, 0) <= 0) {
                        canForm = false;
                        break;
                    }
                }

                if (!canForm) return false;

                // Use the next k-1 numbers to form the sequence
                for (int i = 1; i < k; i++) {
                    freq.put(num + i, freq.get(num + i) - 1);
                }

                // Mark that a sequence ends at num + k - 1
                end.put(num + k - 1, end.getOrDefault(num + k - 1, 0) + 1);
            }
        }

        return true;
    }
}
